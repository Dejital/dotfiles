# Mailbox configuration
source ~/.mutt/mailboxes
set mbox_type=Maildir
set folder=$HOME/Mail
set header_cache=~/.mutt/cache/headers
set move = no # Don't move mail from the spool
set mail_check = 0

# Personal
set realname="Sergey Kutserubov"
set from="sergey@sergeyk.com"
alternates dejital@gmail.com kutserubovs@hawks.rockhurst.edu
set spoolfile=+gmail/INBOX
set record=+gmail/sent # Where do we save sent messages?
set signature=~/.mutt/signature
# Folder keybindings
macro index gi "<change-folder>=gmail/INBOX<enter>"
macro index ga "<change-folder>=gmail/archive<enter>"
macro index gs "<change-folder>=gmail/sent<enter>"
macro index gd "<change-folder>=gmail/drafts<enter>"
macro index gf "<change-folder>=gmail/flagged<enter>"
macro index gr "<change-folder>=gmail/Rockhurst<enter>"

# Send mail with putmail.py
set sendmail="/usr/local/bin/putmail.py"

# Aliases (equivalent of an address book)
set alias_file= ~/.mutt/aliases
set sort_alias= alias
set reverse_alias=yes
source $alias_file

# Keybindings
bind editor <space> noop
#
# Viewing URLs
macro index cb |urlview\n 'call urlview to extract URLs out of a message'
macro pager cb |urlview\n 'call urlview to extract URLs out of a message' 
macro pager cw |"w3m -T text/html"\n

# For better looks
set markers=no # don't put '+' at the beginning of wrapped lines
set pager_index_lines= 5 # Show index while in pager view
set sort = 'threads'
set sort_aux = 'last-date-received'

# Color scheme
source ~/.mutt/themes/linux.muttrc

# Write email with vim
# Currently set to wrap 72 chars per line with spellcheck
set editor='vim -c "set textwidth=72" -c "set wrap" -c "set spell"'
